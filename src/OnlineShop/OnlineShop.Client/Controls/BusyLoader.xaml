<UserControl x:Name="userControl" 
             x:Class="OnlineShop.Client.Controls.BusyLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineShop.Client.Controls"
             mc:Ignorable="d">
    <Grid x:Name="busyIndicator" Background="#33464646" >
        <Border BorderBrush="#FF818080" BorderThickness="1" VerticalAlignment="Center" Background="White" Padding="10,20" Margin="50">
            <StackPanel>
                <TextBlock Grid.Row="0" TextAlignment="Center" FontSize="24" TextTrimming="CharacterEllipsis" Foreground="#FF404040">Loading data...</TextBlock>
                <ProgressBar Grid.Row="1" Height="7" IsIndeterminate="True" Margin="10" Foreground="#FF007ACC" Background="#FFD6D6D6" BorderBrush="#FFD6D6D6"></ProgressBar>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
